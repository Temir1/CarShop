
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Maserati</title>
    <link rel="stylesheet" href="/Content/css/style.css" type="text/css" />
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="/Content/js/scrypts.js" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header"><img src="/Content/images/Header.png" alt="Шапка" /></div>
        <div id="content">
            <div id="nav">
                <ul>
                    <li><a title="на главную" href="/Home/Index"><img src="/Content/images/Logo.jpg" alt="Логотип" /></a></li>
                    @Html.Action("Nav", "Home")
                </ul>
                <div id="map"><img src="/Content/images/Map.jpg" alt="Карта" /></div>
            </div>
            <div id="main">
                @RenderBody()
            </div>
            @if(IsSectionDefined("Form"))
            {
                @RenderSection("Form")
            }
        </div>
        <div id="footer">Copypate</div>
    </div>
</body>
</html>

